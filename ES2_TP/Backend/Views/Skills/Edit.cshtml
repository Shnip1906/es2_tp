@model BusinessLogic.Entities.Skill
@{
    ViewBag.Title = "Skills";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    
}

<h1 class="text-center">Editar skills</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edits">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         
            <div class="form-group">
                <label asp-for="NomeSkills" class="control-label"></label>
                <input asp-for="NomeSkills" class="form-control" type="text"  value="@ViewBag.Nome" />
                <span asp-validation-for="NomeSkills" class="text-danger"></span>
            </div>
     
            <br/>
            <input id="Id" name="Id" type="hidden" value="@ViewBag.Id" />
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
  
        </form>
    </div>
</div>