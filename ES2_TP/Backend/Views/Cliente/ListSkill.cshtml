@using Microsoft.AspNetCore.Http
@model IEnumerable<BusinessLogic.Entities.Skill>
@{
    ViewBag.Title = "Skills";
    Layout = "~/Views/Shared/_Layout5.cshtml";
}

<h2 class="text-center"> Lista das skills</h2>
<p>
    <a class="btn btn-primary" asp-area="" asp-action="ListSkill" asp-route-id="@ViewBag.Id">Adicionar Skills</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>
            Skills
        </th>


    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeSkills)
            </td>

            <td>
                <a asp-action="AdicionarSkills" asp-route-id="@item.IdSkills" asp-route-prop="@ViewBag.Id">Adicionar</a>
            </td>
        </tr>
    }
    </tbody>
</table>