@model BusinessLogic.Entities.Utilizador

@{
    ViewBag.Title = "Editar cliente"; 
    Layout = "~/Views/Shared/_Layout5.cshtml";
}



<!DOCTYPE html>

<html>
<head>
    <title>Editar Cliente</title>
</head>
<body>
<h2 class="text-center"> Editar cliente</h2>
<form asp-action="RegistarEditarClientes">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="NomeUtilizador" class="control-label"></label>
        <input asp-for="NomeUtilizador" type="text" class="form-control" value="@ViewBag.Nome" />
        <span asp-validation-for="NomeUtilizador" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Username" class="control-label"></label>
        <input asp-for="Username" type="text" class="form-control" value="@ViewBag.Username"/>
        <span asp-validation-for="Username" class="text-danger" ></span>
    </div>
            
    <input id="Id" name="Id" type="hidden" value="@ViewBag.Id" />
    <div class="form-group">
        <input type="submit" value="EditarCliente" class="btn btn-primary"/>
    </div>
</form>



</body>
</html>