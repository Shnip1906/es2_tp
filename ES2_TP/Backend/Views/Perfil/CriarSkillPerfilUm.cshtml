@model BusinessLogic.Entities.Skillprof
@{
    ViewBag.Title = "Index"; 
    Layout = "~/Views/Shared/_Layout4.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="CriaSKTUM">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nhoras" class="control-label"></label>
                <input asp-for="Nhoras" class="form-control"/>
                <span asp-validation-for="Nhoras" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Escolhe uma skill: </label>   
                <select asp-for="IdSkills" asp-items="ViewBag.IdSkills"></select>
            </div>
                  <br/>
            <div class="form-group">
                <label>Escolher um talento: </label>   
                <select asp-for="IdPerfil" asp-items="ViewBag.IdPerfil"></select>
            </div>
         
            <!--select asp-for="FkIdTalentoNavigation.Nome" asp-items="ViewBag.FkIdTalento"></-select>-->

            <br/>

            <div class="form-group">
                <input type="submit" value="CriarSkillTalentoUM" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>