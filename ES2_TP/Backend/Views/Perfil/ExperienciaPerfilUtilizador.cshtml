@model List<ExperienciaModel>?

@{
    ViewBag.Title = "Index"; 
    Layout = "~/Views/Shared/_Layout5.cshtml";
}


<h2 class="text-center">Lista das expriências</h2>
<p>
    <a class="btn btn-primary" asp-area="" asp-action="CriarExpUtilizador" asp-route-id="@ViewBag.id">Criar Experiencia</a>
</p>
<table class="table">
    <thead>
    <tr>
            <th>
               <strong>Nome da Experiência</strong>
            </th>
            <th>
                <strong>Nome da Empresa</strong>
            </th>
            <th>
                <strong>Ano de Início</strong>
            </th>
            <th>
                <strong>Ano de Fim</strong>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeExperiencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeEmpresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Anoinicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Anofim)
            </td>
            <td>
                <a asp-action="EliminarExpUtilizador" asp-route-id="@item.IdExperiencia">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>