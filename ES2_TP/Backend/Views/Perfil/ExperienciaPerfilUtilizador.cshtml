@model IEnumerable<BusinessLogic.Entities.Experiencium>

@{
    ViewBag.Title = "Index"; 
    Layout = "~/Views/Shared/_Layout5.cshtml";
}


<h2 class="text-center">Lista das expriÃªncias</h2>
<p>
    <a class="btn btn-primary" asp-area="" asp-action="CriarExpUtilizador" asp-route-id="@ViewBag.id">Criar Experiencia</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomeExperiencia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomeEmpresa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Anoinicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Anofim)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeExperiencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeEmpresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Anoinicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Anofim)
            </td>
            <td>
                <a asp-action="EliminarExp" asp-route-id="@item.IdExperiencia">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>