@model IEnumerable<BusinessLogic.Entities.Perfil>

@{
    ViewBag.Title = "Index"; 
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1 class="text-center">Lista dos Perfis</h1>
<a class="btn btn-primary" asp-area="" asp-controller="Perfil" asp-action="CriarPerfil">Criar Perfil</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomePerfil)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pais)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precohora)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomePerfil)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Pais)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precohora)
            </td>
            <td>
                <a asp-action="EditarPerfil" asp-route-id="@item.IdPerfil">Editar</a> |
                <a asp-action="EliminarPerfil" asp-route-id="@item.IdPerfil">Deletar</a>|
                <a asp-action="ExperienciaPerfil" asp-route-id="@item.IdPerfil">Experiencias</a>|
                <a asp-action="ListarSkillTalento" asp-route-id="@item.IdPerfil">Skills</a>
            </td>
        </tr>
}
    </tbody>
</table>