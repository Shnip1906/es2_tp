@model BusinessLogic.Entities.Perfil
@{
    ViewBag.Title = "title";
    Layout = "_Layout5";
}

<h2>Editar o Talento</h2>

<form asp-action="EditarTalentos">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="NomePerfil" class="control-label"></label>
        <input asp-for="NomePerfil" type="text" class="form-control" value="@ViewBag.Nome" />
        <span asp-validation-for="NomePerfil" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Pais" class="control-label"></label>
        <input asp-for="Pais" type="text" class="form-control" value="@ViewBag.Pais"/>
        <span asp-validation-for="Pais" class="text-danger" ></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" type="text" class="form-control" value="@ViewBag.Email"/>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Precohora" class="control-label"></label>
        <input asp-for="Precohora" type="number" class="form-control" value="@ViewBag.Preco"/>
        <span asp-validation-for="Precohora" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Publico" class="control-label"></label>
        <input asp-for="Publico" type="checkbox" checked="@ViewBag.Publico">
    </div>
    <br/>
    <input id="Id" name="Id" type="hidden" value="@ViewBag.Id" />
            
    <br/>
    <div class="form-group">
        <input type="submit" value="Editar Perfil" class="btn btn-primary"/>
    </div>
</form>