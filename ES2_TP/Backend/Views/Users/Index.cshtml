@model List<UsersModel>?

@{
    ViewBag.Title = "Index"; 
    Layout = "~/Views/Shared/_Layout2.cshtml";
}



<!DOCTYPE html>

<html>
<head>
    <title>Lista dos utilizadores</title>
</head>
<body>
<h1 class="text-center">Lista dos utilizadores</h1>
<br
    ++/>
<p>
    <a class="btn btn-primary" asp-area="" asp-action="Create">Criar Novo utilizador</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <strong>Nome de Utilizador</strong>
            </th>
            <th>
                <strong>Username</strong>
            </th>
           <th>
                <strong>Tipo de Utilizador</strong>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nomeUtilizador)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tipoUtilizador)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idUtilizador">Editar</a>
                <!--a asp-action="Delete" asp-route-id="@item.idUtilizador">Deletar</!--a-->
            </td>
        </tr>
}
    </tbody>
</table>


</body>
</html>